<div class="banner-my-workouts" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://hult-center-assets.s3.amazonaws.com/uploads/2022/07/Running-WebBanner-2100x700-1-1800x600.jpg)">
</div>

<div class="chat"
    data-controller="chat-subscription"
    data-chat-subscription-chat-id-value="<%= @chat.id %>"
    data-chat-subscription-current-user-id-value="<%= current_user.id %>">
  <% if @chat.booking.user.id == current_user.id %>
    <h1><%= @chat.booking.workout.user.first_name %> 路 <%= @chat.booking.workout.activity_type %> 路 <%= @chat.booking.workout.date.strftime("%e %h %Y") %> </h1>
  <% else %>
    <h1><%= @chat.booking.user.first_name %> 路 <%= @chat.booking.workout.activity_type %> 路 <%= @chat.booking.workout.date.strftime("%e %h %Y") %> </h1>
  <% end %>

  <div class="messages" data-chat-subscription-target="messages">
    <% @chat.messages.each do |message| %>
      <div class="message-row d-flex <%= message.sender?(current_user) ? 'justify-content-end' : 'justify-content-start' %>">
        <div class="<%= message.sender?(current_user) ? 'sender-style' : 'receiver-style' %>">
          <%= render "messages/message", message: message %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="m-0">
    <%= simple_form_for [@booking, @chat, @message],
          html: {class: "d-flex m-0 p-2",
          data: { action: "turbo:submit-end->chat-subscription#resetForm" }
    } do |f|
    %>
      <%= f.input :content,
        label: false,
        placeholder: "Write a message",
        wrapper_html: {class: "flex-grow-1 me-1"}
      %>
      <%= f.submit "", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>
</div>
<%= render "shared/navbar_footer" %>
